FROM {{fabric_compose.orderer.image}}

ARG genesis_file_path
ARG signcert_path
ARG privatekey_path
ARG cacert_path
ARG admincert_path

ADD $genesis_file_path /var/hyperledger/orderer/
ADD $signcert_path /var/hyperledger/orderer/msp/signcerts/
ADD $privatekey_path /var/hyperledger/orderer/msp/keystore/
ADD $cacert_path /var/hyperledger/orderer/msp/cacerts/
ADD $admincert_path /var/hyperledger/orderer/msp/admincerts/
